<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        style="@style/ListItem"
        android:paddingLeft="0dp"
        android:paddingRight="0dp">

    <TextView
            android:id="@+id/question_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/default_margin"
            android:paddingRight="@dimen/default_margin"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="test pack name" />

    <LinearLayout
            android:id="@+id/answer_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/question_text">

        <View
                android:id="@+id/separator"
                android:layout_width="match_parent"
                android:layout_height="@dimen/double_margin"
                android:background="@drawable/line" />

        <TextView
                android:id="@+id/answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/default_margin"
                android:paddingRight="@dimen/default_margin"
                tools:text="test answer" />

        <TextView
                android:id="@+id/also_answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/default_margin"
                android:paddingRight="@dimen/default_margin"
                tools:text="test also answer" />

        <TextView
                android:id="@+id/not_answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/default_margin"
                android:paddingRight="@dimen/default_margin"
                tools:text="test not answer" />

        <TextView
                android:id="@+id/comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/default_margin"
                android:paddingRight="@dimen/default_margin"
                tools:text="test comment" />

        <TextView
                android:id="@+id/reference"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/default_margin"
                android:paddingRight="@dimen/default_margin"
                tools:text="test reference" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>